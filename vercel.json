{
  "functions": {
    "app/routes/**/*.tsx": {
      "memory": 1024,
      "maxDuration": 30,
      "runtime": "nodejs18.x",
      "fluidCompute": true
    },
    "app/utils/*.server.ts": {
      "memory": 1024,
      "maxDuration": 30,
      "runtime": "nodejs18.x",
      "fluidCompute": true
    }
  },
  "buildCommand": "remix build",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
